# FreeClaw Configuration
# Copy this file to .env and modify as needed

# Server Configuration
HOST=0.0.0.0
PORT=3000

# OpenCode Server Configuration
# OpenCode 服务器必须先通过 "opencode serve" 命令启动
# OpenCode 服务器认证信息（从环境变量 OPENCODE_SERVER_PASSWORD 获取）
OPENCODE_SERVER_HOST=127.0.0.1
OPENCODE_SERVER_PORT=4096
OPENCODE_SERVER_USERNAME=opencode
# OPENCODE_SERVER_PASSWORD=  # 从环境变量自动获取，无需在此设置

# Default Model
DEFAULT_MODEL=big-pickle

# Available Models:
# - big-pickle
# - trinity-large-preview-free
# - gpt-5-nano
# - glm-4.7-free
# - minimax-m2.1-free
# - kimi-k2.5-free

# Session Configuration
MAX_TOKENS=16000
SESSION_TIMEOUT=3600000

# Request Configuration
REQUEST_TIMEOUT=300000

# Tools Configuration
DEFAULT_TOOLS=read,write,bash,grep,glob,task
